# ATC coding rules - https://github.com/atc-net/atc-coding-rules
# Version: 1.0.9
# Updated: 01-02-2022
# Location: Samples
# Distribution: DotNet7
# Inspired by: https://docs.microsoft.com/en-us/dotnet/fundamentals/code-analysis/code-style-rule-options

##########################################
# Code Analyzers Rules
##########################################
[*.{cs,csx,cake}]

##########################################
# Custom - Code Analyzers Rules
##########################################

dotnet_diagnostic.CA1052.severity = none            # Type 'Program' is a static holder type but is neither static
dotnet_diagnostic.CA1303.severity = none            # Do not pass literals as localized parameters
dotnet_diagnostic.CA1711.severity = none            # Rename type name AppDelegate so that it does not end in 'Delegate'
dotnet_diagnostic.CA1724.severity = none            # The type name App conflicts in whole or in part with the namespace name 'Android.App'
dotnet_diagnostic.CA1822.severity = none            # Mark methods as static
dotnet_diagnostic.CA1852.severity = none            # Type can be sealed
dotnet_diagnostic.CA5392.severity = none            # The method XamlCheckProcessRequirements didn't use DefaultDllImportSearchPaths attribute for P/Invokes

dotnet_diagnostic.MA0048.severity = none            # File name must match type name

dotnet_diagnostic.SA1601.severity = none            # Partial elements should be documented
dotnet_diagnostic.SA1649.severity = none            # File name must match type name
dotnet_diagnostic.SA1642.severity = none            # Constructor summary documentation should begin with standard text

dotnet_diagnostic.S1118.severity = none             # Add a 'protected' constructor or the 'static' keyword to the class declaration.