<UserControl
    x:Class="Atc.Installer.Wpf.ComponentProvider.ElasticSearch.Controls.ElasticSearchConnectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Atc.Installer.Wpf.ComponentProvider.ElasticSearch.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:ElasticSearchConnectionViewModel}"
    d:DesignHeight="400"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <StackPanel IsEnabled="False" Orientation="Vertical">
        <atc:LabelTextBox LabelText="WebProtocol" Text="{Binding Path=WebProtocol}" />
        <atc:LabelTextBox LabelText="Host name" Text="{Binding Path=HostName}" />
        <atc:LabelIntegerBox LabelText="Host port" Value="{Binding Path=HostPort}" />
        <atc:LabelTextBox LabelText="Username" Text="{Binding Path=Username}" />
        <atc:LabelTextBox LabelText="Password" Text="{Binding Path=Password}" />
        <atc:LabelTextBox LabelText="Index" Text="{Binding Path=Index}" />
    </StackPanel>
</UserControl>
