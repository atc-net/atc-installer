<Window
    x:Class="Atc.Installer.Wpf.App.Dialogs.AboutBoxDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="About Atc.Installer"
    Width="300"
    Height="225"
    Background="{DynamicResource AtcApps.Brushes.Dialog.Background}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">

    <Grid Margin="20">
        <atc:UniformSpacingPanel Orientation="Vertical" Spacing="20">
            <TextBlock FontWeight="Bold" Text="Atc.Installer" />
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Version: " />
                <TextBlock x:Name="VersionTextBlock" Text="1.0.0" />
            </StackPanel>
            <TextBlock Text="Â© 2023 ATC" />
            <Button
                Width="80"
                Margin="10"
                HorizontalAlignment="Right"
                Click="OnOk"
                Content="OK" />
        </atc:UniformSpacingPanel>
    </Grid>
</Window>
