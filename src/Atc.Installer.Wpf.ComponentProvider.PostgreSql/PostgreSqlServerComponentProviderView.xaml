<UserControl
    x:Class="Atc.Installer.Wpf.ComponentProvider.PostgreSql.PostgreSqlServerComponentProviderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas"
    xmlns:componentProvider="clr-namespace:Atc.Installer.Wpf.ComponentProvider;assembly=Atc.Installer.Wpf.ComponentProvider"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:postgreSql="clr-namespace:Atc.Installer.Wpf.ComponentProvider.PostgreSql"
    d:DataContext="{d:DesignInstance Type=postgreSql:PostgreSqlServerComponentProviderViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <atc:BusyOverlay IsBusy="{Binding Path=IsBusy}">
        <StackPanel Orientation="Vertical">
            <componentProvider:ComponentProviderPanelView />
        </StackPanel>
    </atc:BusyOverlay>

</UserControl>