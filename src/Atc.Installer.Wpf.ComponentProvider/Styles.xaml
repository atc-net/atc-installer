<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atc="https://github.com/atc-net/atc-wpf/tree/main/schemas">

    <Style x:Key="AtcApps.Styles.LabelIntegerBox" TargetType="{x:Type atc:LabelIntegerBox}">
        <Setter Property="Foreground" Value="{DynamicResource AtcApps.Brushes.ThemeForeground}" />
        <Setter Property="Background" Value="{DynamicResource AtcApps.Brushes.ThemeBackground}" />
    </Style>

    <Style x:Key="AtcApps.Styles.LabelTextInfo" TargetType="{x:Type atc:LabelTextInfo}">
        <Setter Property="Foreground" Value="{DynamicResource AtcApps.Brushes.ThemeForeground}" />
        <Setter Property="Background" Value="{DynamicResource AtcApps.Brushes.ThemeBackground}" />
    </Style>

    <Style x:Key="AtcApps.Styles.LabelTextBox" TargetType="{x:Type atc:LabelTextBox}">
        <Setter Property="Foreground" Value="{DynamicResource AtcApps.Brushes.ThemeForeground}" />
        <Setter Property="Background" Value="{DynamicResource AtcApps.Brushes.ThemeBackground}" />
    </Style>

</ResourceDictionary>